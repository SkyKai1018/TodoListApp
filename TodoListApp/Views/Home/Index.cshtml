@model IEnumerable<TodoListApp.Models.TodoModel>

<h2>ToDo List</h2>

<table>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            <input type="checkbox" name="isComplete" value="@item.Id" @(item.IsComplete ? "checked" : "") />
        </td>
        <td>@item.Name</td>
        <td>
            <!-- 修改按鈕 -->
            <form method="get" action="/ToDo/Edit" style="display:inline;">
                <input type="hidden" name="id" value="@item.Id" />
                <input type="submit" value="Edit" />
            </form>
            <!-- 刪除按鈕 -->
            <form method="post" action="/ToDo/Delete" style="display:inline;">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@item.Id" />
                <input type="submit" value="Delete" onclick="return confirm('Are you sure?');" />
            </form>
        </td>
    </tr>
    }
</table>

